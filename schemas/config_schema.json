{
	"$schema": "http://json-schema.org/draft-06/schema#", 
	"type": "object",
	"properties": {
		"fields": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"type": {
						"type": "string",
						"pattern": "^(int|uint|float|string|string_ascii|string_unicode)$"
					},
					"name": {
						"type": "string"
					},
					"offset_bytes": {
						"type": "integer"
					},
					"length_bytes": {
						"anyOf": [
							{ "type": "integer", "minimum": 1, "maximum": 1 },
							{ "type": "integer", "multipleOf": 2, "maximum": 8}
						]
					}
				},
				"required": ["type", "name", "offset_bytes", "length_bytes"]
			}
		},
		"time": {
			"type": "object",
			"properties": {
				"from": {
					"type": "string",
					"pattern": "^(field|network)$"
				},
				"format": {
					"type": "string",
					"pattern": "^(epoch_ns|epoch_ms|epoch_s|ISO-8601)$"
				},
				"field": {
					"type": "string"
				}
			},
			"required": ["from"]
		},
		"db": {
			"type": "object",
			"properties": {
				"measurement": {
					"type": "string"
				},
				"tags": {
					"type": "object"
				}
			},
			"required": ["measurement"]
		}
	},
	"required": ["fields", "time", "db"]
}